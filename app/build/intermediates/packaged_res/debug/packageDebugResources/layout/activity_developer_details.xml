<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF">

    <!-- Top bar with back and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer Details"
            android:textColor="#2962FF"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Profile image -->
    <ImageView
        android:id="@+id/dev_profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/dev_profile_pic"
        android:background="@drawable/circle_bg"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp">

    <!-- Name, Student No, Statement, Release Version -->
    <TextView
        android:id="@+id/dev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="24dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/dev_student_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student No"
        android:textColor="#222"
        android:layout_marginTop="8dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/dev_statement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Statement"
        android:textColor="#222"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/dev_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Version"
        android:textColor="#222"
        android:layout_marginTop="18dp"
        android:textSize="14sp"/>

    </LinearLayout>

    <!-- Exit Button -->
    <Button
        android:id="@+id/exit_button"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        android:background="@drawable/rounded_blue_button"
        android:text="Exit"
        android:textColor="#FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>
