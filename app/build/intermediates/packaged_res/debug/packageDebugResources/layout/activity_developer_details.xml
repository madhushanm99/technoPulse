<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer Details"
            android:textColor="#3e50b4"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dev_profile_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/dev_profile_pic"
        android:background="@drawable/circle_bg"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImageShape"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:paddingStart="30dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textStyle="bold"
            android:textColor="#222"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/dev_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manura Madhushan"
            android:textColor="#222"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingStart="30dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textStyle="bold"
            android:textColor="#222"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/dev_student_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020t00893@stu.cmb.ac.lk"
            android:textColor="#222"
            android:textSize="15sp"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/bottom_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/dev_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Version : 1.0"
                android:textColor="#222"
                android:layout_marginTop="18dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/exit_button"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_blue_button"
                android:text="Exit"
                android:textColor="#FFF"/>
        </LinearLayout>
    </RelativeLayout>


    <!-- Exit Button -->

</LinearLayout>
